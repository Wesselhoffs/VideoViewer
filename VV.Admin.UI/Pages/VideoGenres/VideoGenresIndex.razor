<table class="table table-hover m-3">
	<thead>
		<tr>
			<th scope="col">Video Id</th>
			<th scope="col">Genre Id</th>
		</tr>
	</thead>
	<tbody class="table-group-divider">
		@foreach (var vidGenre in Model)
		{
			<tr>
				<td>@vidGenre.VideoId</td>
				<td>@vidGenre.GenreId</td>
				<td style="vertical-align:middle">
					<div class="d-flex mt-1 me-1 justify-content-end">
						<button class="btn btn-outline-danger p-2" @onclick="@(() => OnClick.InvokeAsync(new RefClickModel<VideoGenreDTO>(PageType.Delete, vidGenre)))">Delete</button>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
@code {
	[Parameter] public List<VideoGenreDTO> Model { get; set; } = new();
	[Parameter] public EventCallback<RefClickModel<VideoGenreDTO>> OnClick { get; set; }
}
