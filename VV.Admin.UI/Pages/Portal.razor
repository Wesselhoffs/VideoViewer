@page "/{Route}"
<h1 class="m-3">@Route</h1>
@if (Route.Equals(Routes.Videos))
{
	<VideosPortal />
}@if (Route.Equals(Routes.Genres))
{
	<GenresPortal />
}@if (Route.Equals(Routes.Directors))
{
	<DirectorsPortal />
}@if (Route.Equals(Routes.VideoGenres))
{
	<VideoGenresPortal />
}@if (Route.Equals(Routes.SimilarVideos))
{
	<SimilarVideosPortal />
}

@code {
	[Parameter] public string Route { get; set; } = "";
}
