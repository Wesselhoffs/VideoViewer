<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Video Viewer - Admin</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="/Videos">
				<span class="oi oi-play-circle" aria-hidden="true"></span>@Routes.Videos
			</NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="/Genres">
                <span class="oi oi-list" aria-hidden="true"></span> @Routes.Genres
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="/Directors">
                <span class="oi oi-play-circle" aria-hidden="true"></span> @Routes.Directors
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="/VideoGenres">
                <span class="oi oi-briefcase" aria-hidden="true"></span> @Routes.VideoGenres
            </NavLink>
        </div><div class="nav-item px-3">
            <NavLink class="nav-link p-3" href="/SimilarVideos">
                <span class="oi oi-briefcase" aria-hidden="true"></span> @Routes.SimilarVideos
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
